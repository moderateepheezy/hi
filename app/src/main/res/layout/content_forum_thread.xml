<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/twelve_12dp"
    android:paddingRight="@dimen/twelve_12dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.exolvetechnologies.hidoctor.activities.ForumThreadActivity"
    tools:showIn="@layout/activity_forum_thread">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/forumThreads"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getThreadsProgress"
        style="?android:progressBarStyleLarge"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>
